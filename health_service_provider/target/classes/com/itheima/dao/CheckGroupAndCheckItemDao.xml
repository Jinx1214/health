<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.CheckGroupAndCheckItemDao">
    <insert id="addCheckGroupAndCheckItem">
        insert into t_checkgroup_checkitem (checkgroup_id,checkitem_id) values
        <foreach item="ids" collection="ids" separator="," open="" close="" index="">
        (#{id},#{ids})
        </foreach>
    </insert>
    <select id="queryCheckItemByGroupId" resultType="com.itheima.pojo.CheckItem">
        select * from t_checkitem where id in (
            select t_checkgroup_checkitem.checkitem_id from t_checkgroup_checkitem where t_checkgroup_checkitem.checkgroup_id = #{id}
        )
    </select>
    <delete id="deleteGroupAndCheckItem">
        delete from t_checkgroup_checkitem where checkgroup_id = #{id}
    </delete>
</mapper>