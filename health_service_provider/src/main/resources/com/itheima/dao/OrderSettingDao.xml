<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.OrderSettingDao">

    <insert id="add">
        insert into t_ordersetting(orderDate,number,reservations) values (#{date},#{number},#{reservations})
    </insert>
    <select id="getReservations" resultType="com.itheima.pojo.OrderSetting">
/*select * from t_ordersetting  where orderDate between "2023-5-1" and "2023-5-31"*/
        select * from t_ordersetting where  orderDate between #{startDay} and #{endDay}
    </select>
    <!--查询日期下是否有预约-->
    <select id="queryReservations" resultType="com.itheima.pojo.OrderSetting">
        select * from t_ordersetting where orderdate = #{date}
    </select>

    <!--编辑该预约-->
    <update id="editReservations">
        update t_ordersetting set number = #{newReservations} where orderdate = #{date}
    </update>

    <insert id="addReservations" >
        insert into t_ordersetting(orderdate,number,reservations) values(#{date},#{newReservations},0)
    </insert>
</mapper>